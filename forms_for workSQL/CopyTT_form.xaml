<Window x:Class="rab_stol.forms_for_workSQL.CopyTT_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rab_stol.forms_for_workSQL"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Копирование ТТ с сектора одного дистрибьтора на сектор другого дистрибьютора" Height="201" Width="972">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49" MinHeight="49"/>
            <RowDefinition Height="71" MinHeight="71"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241" MinWidth="241"/>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="257" Width="257"/>
            <ColumnDefinition Width="235" MinWidth="235"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btn_connect" Content="Подключение" Grid.Row="0" Grid.Column="2" FontFamily="Times New Roman" FontSize="18" Height="Auto" Click="btn_connect_Click"/>
        <Label x:Name="label_status" Grid.Row="0" Grid.Column="3" FontSize="18"  FontFamily="Times New Roman" Content="Отключено" Foreground="#DDFF0000"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="text_server" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" materialDesign:HintAssist.Hint="Сервер" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Times New Roman" FontSize="18"    HorizontalContentAlignment="Center" Margin="5,0"  Text="192.168.2.7" PreviewTextInput="text_server_PreviewTextInput" TextChanged="text_server_TextChanged"  />

        <TextBox x:Name="distrID_out" Grid.Row="1" Grid.Column="0" materialDesign:HintAssist.Hint="Код дистра откуда копировать" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Times New Roman" FontSize="18" HorizontalContentAlignment="Center" Margin="5" PreviewTextInput="distrID_out_PreviewTextInput"/>
        <TextBox x:Name="distrID_in" Grid.Row="1" Grid.Column="1" materialDesign:HintAssist.Hint="Код дистра куда копировать" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Times New Roman" FontSize="18" HorizontalContentAlignment="Center" Margin="5" PreviewTextInput="distrID_in_PreviewTextInput"/>
        <TextBox x:Name="sectorID_out" Grid.Row="1" Grid.Column="2" materialDesign:HintAssist.Hint="Код сектора откуда копировать" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Times New Roman" FontSize="18" HorizontalContentAlignment="Center" Margin="5" PreviewTextInput="sectorID_out_PreviewTextInput"/>
        <TextBox x:Name="sectorID_in" Grid.Row="1" Grid.Column="3" materialDesign:HintAssist.Hint="Код сектора куда копировать" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Times New Roman" FontSize="18" HorizontalContentAlignment="Center" Margin="5" PreviewTextInput="sectorID_in_PreviewTextInput"/>

        <Button x:Name="btn_copyTT" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Click="btn_copyTT_Click" Content="Копировать" Margin="5" FontFamily="Times New Roman" FontSize="18" Height="Auto"/>
    </Grid>
</Window>
