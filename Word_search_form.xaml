<Window x:Name="word_search_form" x:Class="rab_stol.Word_search_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rab_stol"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавление слова/фразы для поиска по SD" Height="127.905" Width="342.857">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="text_search" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" materialDesign:HintAssist.Hint="слово или фраза для поиска" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top"/>
        <Button x:Name="btn_text_ok" Grid.Row="1" Grid.Column="0" Content="ОК" IsDefault="True" Height="Auto" Margin="0,10" Click="btn_text_ok_Click"/>
        <Button x:Name="btn_text_cancel" Grid.Row="1" Grid.Column="1" Content="Отмена" IsCancel="True" Height="Auto" Margin="0,10" />
    </Grid>
</Window>
